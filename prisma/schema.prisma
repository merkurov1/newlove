// datasource, generator, enums...

// --- DATA MODELS ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)

  // Relations
  accounts      Account[]
  sessions      Session[]
  messages      Message[]
  articles      Article[]
  projects      Project[]
  subscription  Subscriber?
  
  // <<< ДОБАВЛЕНО: Связь с письмами рассылки
  letters       Letter[]
}

// ... все остальные модели (Account, Article, Project, Subscriber и т.д.) остаются без изменений ...

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  userId    String?  @unique
  user      User?    @relation(fields: [userId], references: [id])

  @@map("subscribers")
}

// <<< ДОБАВЛЕНА НОВАЯ МОДЕЛЬ ДЛЯ ПИСЕМ РАССЫЛКИ >>>
model Letter {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  content     String    @db.Text
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Связь с автором
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])

  @@map("letters")
}

