# Prefer prebuilt binaries where available (helps avoid building @swc/core)
unsafe-perm=true
engine-strict=false
fetch-retries=3

# Disable optional postinstall scripts that may try to build native modules in constrained environments.
optional=false
loglevel=error
fetch-retries=2
fund=false
audit=false

# pnpm optimization for Render
shamefully-hoist=true
strict-peer-dependencies=false
auto-install-peers=true
